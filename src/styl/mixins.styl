size(width, height=width)
	width width
	height height

tic(width=20px)
	position relative
	&:before,
	&:after
		content ""
		width width
		box-sizing border-box
		background-color red_color
		border 2px solid @background-color
		position absolute
		top 50%
		left 50%
	&:before
		transform translate(-50%, -50%) rotate(45deg)
	&:after
		transform translate(-50%, -50%) rotate(-45deg)

tac(width=20px)
	position relative
	&:before
		content ""
		size width
		box-sizing border-box
		background-clip content-box
		border 2px solid red_color
		border-width 4px
		border-radius 50%
		padding 6px
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)